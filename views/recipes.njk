{% extends "layout.njk" %}

{% block head %}

  <title> Receitas - Foodfy </title>

{% endblock %}

{% block content %}
  <section class="cards">
  
    {% for item in items %}
      <div class="card" id="{{loop.index - 1}}">
        <div class="card__image-container">
          <img src="{{item.image}}" alt="">
        </div>
        <div class="card__content">
          {{item.title}}
        </div>
        <div class="card__info">
          {{item.author}}
        </div>
      </div>
    {% endfor %}
  </section>

  <script src="/scripts.js"></script>
{% endblock %}
